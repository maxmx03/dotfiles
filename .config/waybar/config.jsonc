{
	"layer": "top",
	"position": "top",
	// "margin-top": 3,
	"margin-bottom": 0,
	"output": [
		"HDMI-A-1"
	],
	"modules-left": [
		"custom/logo",
		"hyprland/workspaces",
		"hyprland/window",
		"mpd"
	],
	"modules-center": [
		"clock",
	],
	"modules-right": [
		"pulseaudio",
		"custom/weather",
		"tray",
		"custom/powermenu",
	],
	"custom/logo": {
		"on-click": "~/.config/hypr/wallpaper.sh",
		// "format": "󰥓",
		"format": "󰣇",
		"tooltip": false,
	},
	"hyprland/workspaces": {
		"active-only": false,
		"all-outputs": false,
		"show-special": true,
		"move-to-monitor": true,
		"format": "{icon}",
		"format-icons": {
			"1": "",
			"2": "󰈹",
			"3": "󰉋",
			"4": "",
		},
		"persistent-workspaces": {
			"1": "HDMI-A-1",
			"2": "HDMI-A-1",
			"3": "HDMI-A-1",
		},
		"on-scroll-down": "hyprctl dispatch workspace e-1",
		"on-scroll-up": "hyprctl dispatch workspace e+1",
		"sort-by": "number",
	},
	"tray": {
		"color": "#e0e0e0",
		"icon-size": 24,
		"spacing": 10,
	},
	"hyprland/window": {
		"format": "{}",
		"rewrite": {
			"(\\d\\. )?(.*) terminal": "<span color=\"#e0e0e0\">   Terminal</span>",
			"terminal (.*)": "<span color=\"#e0e0e0\"></span>",
			"terminal": "<span color=\"#e0e0e0\">  Terminal</span>",
			"(\\d\\. )?(.*) Brave": "<span color=\"#e0e0e0\">󰈹  Brave</span>",
			"Brave (.*)": "<span color=\"#e0e0e0\">󰈹  Brave</span>",
			"Brave": "<span color=\"#e0e0e0\">󰈹  Brave</span>",
		},
		"separate-outputs": false,
	},
	"custom/powermenu": {
		"format": "",
		"tooltip": false,
		"on-click": "exec ~/.config/waybar/scripts/powermenu",
	},
	"pulseaudio": {
		"format": "{icon}   {volume}%",
		"format-bluetooth": "{volume}% {icon}",
		"format-muted": "",
		"format-icons": {
			"headphone": "󰋎",
			"default": [
				"",
				""
			],
		},
		"scroll-step": 1,
		"on-click": "pavucontrol",
	},
	"custom/weather": {
		"tooltip": true,
		"format": "{}",
		"interval": 1800,
		"exec": "~/.config/waybar/scripts/weather",
		"return-type": "string",
	},
	"clock": {
		"interval": 60,
		"format": "{:%a - %H:%M}",
		"max-length": 25,
		"timezone": "America/Sao_Paulo",
		"locale": "pt_BR.UTF-8",
		"tooltip-format": "<span background='#1c1c1e'><tt><small>{calendar}</small></tt></span>",
		"calendar": {
			"mode": "year",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#e0e0e0'><b>{}</b></span>",
				"days": "<span color='#e0e0e0'><b>{}</b></span>",
				"weeks": "<span color='#0091ff'><b>W{}</b></span>",
				"weekdays": "<span color='#e0e0e0'><b>{}</b></span>",
				"today": "<span background='#0091ff' color='#1c1c1e'><b>{}</b></span>",
			},
		},
	},
	"mpd": {
		"format": "{stateIcon} {title}",
		"format-disconnected": "Disconnected ",
		"format-stopped": "{stateIcon} Stopped ",
		"unknown-tag": "N/A",
		"interval": 10,
		"consume-icons": {
			"on": " "
		},
		"random-icons": {
			"off": "<span color=\"#ff383c\"></span> ",
			"on": " "
		},
		"repeat-icons": {
			"on": " "
		},
		"single-icons": {
			"on": "1 "
		},
		"state-icons": {
			"playing": "",
			"paused": ""
		},
		"tooltip-format": "MPD (connected)",
		"tooltip-format-disconnected": "MPD (disconnected)",
		// Comandos de clique para facilitar a vida
		"on-click": "mpc toggle",
		"on-scroll-up": "mpc volume +5",
		"on-scroll-down": "mpc volume -5"
	},
}
