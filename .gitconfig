[user]
	name = "Max Miliano"
	email = "milianordelcanto@gmail.com"
[credential]
	helper = store
[pull]
	rebase = true
[init]
	defaultBranch = main
[diff]
  tool = nvimdiff
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    dark = true
    side-by-side = true
[merge]
    conflictstyle = diff3
[diff]
  colorMoved = default
